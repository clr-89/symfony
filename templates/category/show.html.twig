{%  extends 'base.html.twig' %}
{% block title %}Catégorie {{ category.name }}{% endblock %}

    {% block body %}
    <div class="m-5">
       <h1>Toutes les séries de la catégorie {{ category.name }}</h1>

        {% for program in programs %}
        <div class="serie mb-4">
             <h2>{{ loop.index }} / {{ program.title }} </h2>
            <div class="d-flex flex-row">
                 <img class="icone align-self-start mx-3" src="{{program.poster}}" alt="{{ program.title }} poster">
                <p>{{ program.summary }}</p>
            </div>
            <div class="m-3">
                <a href="{{ path("program_show", { id: program.id }) }}">Voir la série</a>
            </div>
        </div>
       {% else %}
          Aucune série trouvée.
       {% endfor %}

       <a href="{{ path('app_index') }}">
          Retour à l'accueil
       </a>
    </div>
{% endblock %}